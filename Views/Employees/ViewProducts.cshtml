@{
}

@model IEnumerable<AgriApp.Models.Entities.Product>


<div class="AMAP-Products-body">
    <form method="get" action="/Employees/ViewProducts" class="filter-Form">
        <input type="hidden" name="id" value="@ViewBag.FarmerId" class="ffLbl" />
        <input type="radio" name="str" value="Name" class="ffLbl" />Name
        <input type="radio" name="str" value="Date" class="ffLbl" />Date
        <input type="radio" name="str" value="Category" class="ffLbl" />Category
        <button type="submit" class="ffBtn">Filter</button>
    </form>
    <table class="product-table">
        <thead>
            <tr>
                <th colspan="3" class="product-table-head">@ViewBag.FarmerEmail 's Products</th>
            </tr>
            <tr class="column-heads">
                <th>Name</th>
                <th>Category</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Category</td>
                    <td>@product.Date.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>

</div>

