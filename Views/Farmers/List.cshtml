@{
}
@model List<AgriApp.Models.Entities.Product>


<div class="AMAP-Products-body">

    <table class="product-table">
        <thead>
            <tr>
                <th colspan="3" class="product-table-head">My Products</th>
            </tr>
            <tr class="column-heads">
                <th>Product Name</th>
                <th>Category</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Category</td>
                    <td>@product.Date.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
</div>