@page
@model AgriApp.Pages.LoginModel
@{
}
<dv class="add-body">

    <div class="ab-para">
        <h1>Login </h1>
        <h2>Form for users to login</h2>
        <p>
            Ensure that all fields are entered
        </p>
    </div>

    <form method="post" class="add-form">
        <div class="form-section">
            
            <input placeholder="Email Address" type="text" asp-for="Model.Email" class="form-control" required />
            <span asp-validation-for="Model.Email" class="text-danger"></span>
        </div>
        <div class="form-section">
            
            <input placeholder="Password" type="password" asp-for="Model.Password" class="form-control" required />
            <span asp-validation-for="Model.Password" class="text-danger"></span>
        </div>
        <div class="form-section">
            
            <label class="form-label" asp-for="Model.RememberMe">Remember Me?</label>
        </div>
        <div class="form-section">
            <button type="submit" class="btn-submit">Login</button>
        </div>
    </form>

</dv>

         
        


